{
  "name": "omnichannel-backend",
  "version": "1.0.0",
  "description": "Omnichannel Messaging Backend - Centralized CRM for WhatsApp, Facebook, Instagram, Telegram",
  "private": true,
  "scripts": {
    "deploy": "serverless compose deploy",
    "deploy:infra": "serverless compose deploy --service infrastructure",
    "deploy:webhook": "serverless compose deploy --service webhook-service",
    "deploy:inbound": "serverless compose deploy --service inbound-message-processor",
    "deploy:outbound": "serverless compose deploy --service outbound-message-processor",
    "deploy:websocket": "serverless compose deploy --service websocket-service",
    "remove": "serverless compose remove",
    "dev": "serverless compose run --service webhook-service offline",
    "build": "tsc"
  },
  "dependencies": {
    "@aws-sdk/client-rds-data": "^3.459.0",
    "@aws-sdk/client-sqs": "^3.459.0",
    "@aws-sdk/client-apigatewaymanagementapi": "^3.459.0"
  },
  "devDependencies": {
    "serverless": "^3.38.0",
    "serverless-compose": "^2.5.0",
    "serverless-webpack": "^5.13.0",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5",
    "@types/aws-lambda": "^8.10.130",
    "webpack": "^5.89.0",
    "ts-loader": "^9.5.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
